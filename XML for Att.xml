cat > /tmp/att-vmal1.xml <<'EOF'
<domain type='kvm'>
  <name>att-vmal1</name>

  <memory unit='MiB'>4096</memory>
  <vcpu placement='static'>2</vcpu>
  <cpu mode='host-model'/>

  <os>
    <type arch='x86_64'>hvm</type>
    <bootmenu enable='yes'/>
    <!-- UEFI OVMF (QCOW2 в Astra) -->
    <loader type='pflash' readonly='yes'>/usr/share/OVMF/OVMF_CODE_4M.qcow2</loader>
    <nvram template='/usr/share/OVMF/OVMF_VARS_4M.qcow2'/>
  </os>

  <features><acpi/><apic/></features>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>

  <devices>
    <emulator>/usr/bin/kvm</emulator>

    <!-- Системный диск 50 ГБ -->
    <disk type='file' device='disk'>
      <driver name='qemu' type='qcow2'/>
      <source file='/var/lib/libvirt/images/att-vmal1.qcow2'/>
      <target dev='vda' bus='virtio'/>
      <boot order='2'/>
    </disk>

    <!-- CDROM с ISO Astra -->
    <disk type='file' device='cdrom'>
      <driver name='qemu' type='raw'/>
      <source file='/var/lib/libvirt/iso/astra-se-1.8.iso'/>
      <target dev='sda' bus='sata'/>
      <readonly/>
      <boot order='1'/>
    </disk>

    <!-- Сеть: мост VLAN26 -->
    <interface type='bridge'>
      <source bridge='br26'/>
      <model type='virtio'/>
    </interface>

    <!-- VNC: постоянный доступ с хоста, фиксированный порт 5901 -->
    <graphics type='vnc' port='5901' autoport='no' listen='10.38.22.156' passwd='Ksb2025'>
      <listen type='address' address='10.38.22.156'/>
    </graphics>

    <video><model type='qxl' vram='65536'/></video>
    <input type='tablet' bus='usb'/>

    <!-- Гостевой агент -->
    <channel type='unix'>
      <source mode='bind'/>
      <target type='virtio' name='org.qemu.guest_agent.0'/>
    </channel>
  </devices>
</domain>
EOF
